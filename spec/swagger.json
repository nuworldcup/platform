{
  "openapi" : "3.0.0",
  "info" : {
    "title" : "Northwestern World Cup platform API",
    "description" : "API for the Northwestern World Cup Platform",
    "contact" : {
      "email" : "rojaswestall@gmail.com"
    },
    "license" : {
      "name" : "Apache 2.0",
      "url" : "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version" : "1.0.0"
  },
  "servers" : [ {
    "url" : "https://virtserver.swaggerhub.com/nuworldcup/platform/1.0.0",
    "description" : "SwaggerHub API Auto Mocking"
  } ],
  "tags" : [ {
    "name" : "admins",
    "description" : "Secured Admin-only calls"
  }, {
    "name" : "developers",
    "description" : "Operations available to regular developers"
  } ],
  "paths" : {
    "/register" : {
      "post" : {
        "tags" : [ "developers" ],
        "summary" : "registers user(s) for a tournament",
        "description" : "Adds all players and captains to the db and google sheets. If `registration_type` is `team`, platform will create an entire team in the db and on google sheets. For `team` registration, the system will try to create a new sheet in order of the the `name_preferences` and if all are taken by other teams will assign a default. For `individual` registration, simply omit the `name_preferences` and `captains` fields, and include a `players` array of just one player.",
        "operationId" : "register",
        "requestBody" : {
          "description" : "Inventory item to add",
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/RegistrationInfo"
              }
            }
          }
        },
        "responses" : {
          "201" : {
            "description" : "registration request created"
          },
          "400" : {
            "description" : "invalid input, object invalid"
          },
          "500" : {
            "description" : "internal server error"
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "Player" : {
        "required" : [ "club", "email", "firstName", "lastName" ],
        "type" : "object",
        "properties" : {
          "firstName" : {
            "type" : "string",
            "example" : "Angel"
          },
          "lastName" : {
            "type" : "string",
            "example" : "Croce"
          },
          "email" : {
            "type" : "string",
            "example" : "angelcroce2021@u.northwestern.edu"
          },
          "club" : {
            "type" : "boolean",
            "example" : false
          }
        }
      },
      "Captain" : {
        "required" : [ "club", "email", "firstName", "lastName", "phone" ],
        "type" : "object",
        "properties" : {
          "firstName" : {
            "type" : "string",
            "example" : "Angel"
          },
          "lastName" : {
            "type" : "string",
            "example" : "Croce"
          },
          "email" : {
            "type" : "string",
            "example" : "angelcroce2021@u.northwestern.edu"
          },
          "phone" : {
            "type" : "string",
            "example" : "1234567890"
          },
          "club" : {
            "type" : "boolean",
            "example" : false
          }
        }
      },
      "RegistrationInfo" : {
        "required" : [ "captains", "name_preferences", "players", "registration_type", "tournament_type" ],
        "type" : "object",
        "properties" : {
          "registration_type" : {
            "type" : "string",
            "enum" : [ "team", "individual" ]
          },
          "tournament_type" : {
            "type" : "string",
            "enum" : [ "coed", "womens" ]
          },
          "name_preferences" : {
            "type" : "array",
            "items" : {
              "type" : "string",
              "example" : "Colombia, Italy, Brazil"
            }
          },
          "captains" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/Captain"
            }
          },
          "players" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/Player"
            }
          }
        }
      }
    }
  }
}